{
  "name": "todolist-server",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build:client": "cd ../client && pnpm install && pnpm build",
    "postbuild:client": "rm -rf public/* && cp -r ../client/dist/* public/",
    "build": "mkdir -p public && pnpm build:client",
    "clean": "rm -rf public/*"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-mount": "^4.0.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
} 